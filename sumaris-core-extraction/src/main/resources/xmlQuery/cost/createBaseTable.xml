<queries name="extractionCreateBaseTable">

  <query type="create" temp="false" table="&amp;baseTableName">

    <!-- PK -->
    <!--<select alias="RECORD_TYPE" type="text">'TR'</select>-->
    <select alias="SAMPLE_TYPE" type="text">'S'</select>
    <select alias="LANDING_COUNTRY" type="text">PL.LABEL</select>
    <select alias="VESSEL_COUNTRY" type="text">VL.LABEL</select>
    <select alias="YEAR" type="number">EXTRACT(YEAR FROM T.RETURN_DATE_TIME)</select>
    <select alias="PROGRAM_FK" type="number">P.ID</select>
    <select alias="PROGRAM_LABEL" type="text">P.LABEL</select>
    <select alias="TRIP_FK" type="number">T.ID</select>

    <select alias="OPERATION_FK" type="number">O.ID</select>
    <select alias="BATCH_FK" type="number">B.ID</select>

    <!-- other fields -->
    <select alias="VESSEL_LENGTH" type="number">CAST(VF.LENGTH_OVER_ALL AS DOUBLE) / 100</select>
    <select alias="VESSEL_POWER" type="number">VF.ADMINISTRATIVE_POWER</select>
    <select alias="VESSEL_SIZE" type="number">VF.GROSS_TONNAGE_GRT</select>
    <select alias="VESSEL_TYPE" type="number">4</select> <!-- Other boat -->
    <select alias="HARBOUR" type="text">L.LABEL</select>
    <select alias="HAUL_COUNT" type="number">
      COALESCE(
        (SELECT VUM.NUMERICAL_VALUE FROM VESSEL_USE_MEASUREMENT VUM WHERE VUM.TRIP_FK=T.ID and VUM.PMFM_FK=&amp;nbOperationPmfmId),
        (SELECT COUNT(O.ID) FROM OPERATION O WHERE O.TRIP_FK=T.ID)
      )
    </select>
    <select alias="DAYS_AT_SEA" type="number">(T.RETURN_DATE_TIME - T.DEPARTURE_DATE_TIME) DAY</select>
    <select alias="VESSEL_IDENTIFIER" type="number">T.VESSEL_FK</select> <!-- TODO Ã  anonymiser (hash ?)-->
    <select alias="SAMPLING_COUNTRY" type="text">DL.LABEL</select>
    <select alias="SAMPLING_METHOD" type="text">'Observer'</select><!-- get it from a project's PMFM of type "Hidden" ? -->

    <from alias="T">TRIP</from>
    <from join="true">INNER JOIN PROGRAM P ON P.ID = T.PROGRAM_FK</from>
    <!-- trip return harbour -->
    <from join="true">INNER JOIN LOCATION L ON L.ID = T.RETURN_LOCATION_FK</from>
		<!-- trip return country location -->
    <from join="true">INNER JOIN LOCATION_HIERARCHY LH on LH.CHILD_LOCATION_FK = T.RETURN_LOCATION_FK</from>
    <from join="true">INNER JOIN LOCATION PL ON PL.ID = LH.PARENT_LOCATION_FK AND PL.LOCATION_LEVEL_FK = 1</from>
		<!-- vessel -->
    <from join="true">INNER JOIN VESSEL_FEATURES VF ON VF.VESSEL_FK = T.VESSEL_FK</from>
		<!-- vessel country location -->
    <from join="true">INNER JOIN LOCATION_HIERARCHY VLH on VLH.CHILD_LOCATION_FK = VF.BASE_PORT_LOCATION_FK</from>
    <from join="true">INNER JOIN LOCATION VL ON VL.ID = VLH.PARENT_LOCATION_FK AND VL.LOCATION_LEVEL_FK = 1</from>

    <!-- recorder department -->
    <from join="true">INNER JOIN DEPARTMENT D on D.ID = T.RECORDER_DEPARTMENT_FK</from>
    <from join="true">INNER JOIN LOCATION_HIERARCHY DLH on DLH.CHILD_LOCATION_FK = D.LOCATION_FK</from>
    <from join="true">INNER JOIN LOCATION DL ON DL.ID = DLH.PARENT_LOCATION_FK AND DL.LOCATION_LEVEL_FK = 1</from>

    <!-- operation -->
    <from join="true">LEFT OUTER JOIN OPERATION O ON O.TRIP_FK = T.ID</from>
    <!-- batch -->
    <from join="true">LEFT OUTER JOIN BATCH B ON B.OPERATION_FK = O.ID</from>

    <where group="startDateFilter"><![CDATA[T.RETURN_DATE_TIME >= &startDate]]></where>
    <where operator="AND" group="endDateFilter"><![CDATA[T.DEPARTURE_DATE_TIME <= &endDate]]></where>

    <where operator="AND" group="programFilter">
      <in field="P.LABEL"><![CDATA[&progLabels]]></in>
    </where>
    <where operator="AND" group="locationFilter">
      <in field="T.RETURN_LOCATION_FK"><![CDATA[&locationIds]]></in>
    </where>
    <where operator="AND" group="departmentFilter">
      <in field="T.RECORDER_DEPARTMENT_FK"><![CDATA[&recDepIds]]></in>
    </where>
    <where operator="AND" group="vesselFilter">
      <in field="T.VESSEL_FK"><![CDATA[&vesselIds]]></in>
    </where>

    <orderby direction="ASC">T.ID</orderby>

  </query>

</queries>