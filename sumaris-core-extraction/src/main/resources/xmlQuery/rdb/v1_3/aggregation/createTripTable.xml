<queries name="extractionCreateTripTable">

  <query type="create" temp="false" table="&amp;tripTableName">

    <!-- PK -->
    <select alias="RECORD_TYPE" type="text">'TR'</select>
    <select alias="SAMPLING_TYPE" type="text">T.SAMPLING_TYPE</select>
    <select alias="LANDING_COUNTRY" type="text">T.LANDING_COUNTRY</select>
    <select alias="VESSEL_COUNTRY" type="text">T.VESSEL_COUNTRY</select>
    <select alias="YEAR" type="number">T.YEAR</select>
    <select alias="PROJECT" type="text">T.PROJECT</select>
    <select alias="TRIP_CODE" type="number">MIN(T.TRIP_CODE)</select>

    <!-- other fields -->
    <select alias="VESSEL_LENGTH" type="number">CAST(VF.LENGTH_OVER_ALL AS DOUBLE) / 100</select>
    <select alias="HARBOUR" type="text">L.LABEL</select>
    <select alias="HAUL_COUNT" type="number">
      COALESCE(
        (SELECT VUM.NUMERICAL_VALUE FROM VESSEL_USE_MEASUREMENT VUM WHERE VUM.TRIP_FK=T.ID and VUM.PMFM_FK=&amp;nbOperationPmfmId),
        (SELECT COUNT(O.ID) FROM OPERATION O WHERE O.TRIP_FK=T.ID)
      )
    </select>
    <select alias="DAYS_AT_SEA" type="number">(T.RETURN_DATE_TIME - T.DEPARTURE_DATE_TIME) DAY</select>
    <select alias="VESSEL_IDENTIFIER" type="number">T.VESSEL_FK</select><!-- TODO Ã  anonymiser (hash ?)-->
    <select alias="SAMPLING_COUNTRY" type="text">COALESCE(DL.LABEL, PL.LABEL)</select>
    <select alias="SAMPLING_METHOD" type="text">'Observer'</select>

    <from alias="T">&amp;rawTripTableName</from>

    <where>1=1</where>

<!--    <orderby direction="ASC">T.ID</orderby>-->

  </query>

</queries>